block modal
  #modalDelete.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog.modal-sm
      .modal-content
        .modal-header
          img.close(src="images/icon-close.png" data-dismiss="modal" aria-label="Close")
          h4.modal-title Delete Project
        .modal-body
          p Are you sure delete [project name]?
        .modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal") Cancel
          button.btn.btn-green(type="button") Delete

  #modalAddProject.modal.fade.mdl-custom-right(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content.setheight
        .modal-header
          img.close(src="images/icon-close.png" data-dismiss="modal" aria-label="Close")
          h4.modal-title Add New Project
        .modal-body
          .section-form
            form.form-main
              .form-group
                label Project Name
                input.form-control(type="text" name="project_name" required)
              .form-group
                label Project Type
                select.select(name="project_type" required)
                  option(selected) Select Project Type
                  option Design UI/UX
                  option Prototype (HTML)
                  option Website Development
                  option Web App
                  option Mobile App
                  option Web App + Mobile App
              .form-group
                label Timeline
                .row
                  .col-sm-4
                    .inp-group.date
                      label Start Date
                      input.form-control#tanggal(type="text" name="start_date" required)
                      .addon
                        label.fa.fa-calendar(for="start_date")
                  .col-sm-4
                    .inp-group.date
                      label End Date
                      input.form-control#tanggal(type="text" name="end_date" required)
                      .addon
                        label.fa.fa-calendar(for="end_date")
                  .col-sm-4
                    .inp-group.date
                      label Actual Date
                      input.form-control#tanggal(type="text" name="actual_date" required)
                      .addon
                        label.fa.fa-calendar(for="actual_date")
              .form-group
                label Incentive Value
                .inp-group.curren
                  .addon Rp
                  input.form-control.currency(type="text" name="ope_tidak_ditagih" required)
              .form-group
                label 
                  h3 Team
                .multiplier
                  btn.btn-add(type="button")
                  .form-group.item
                    btn.btn-del.fa.fa-trash(type="button")
                    .row
                      .col-sm-6
                        label Name
                        .inp-group
                          select.select(name="klasifikasi_klien" required)
                            option(selected) Select employee
                            option Employeer
                            option Employeer 1
                            option Employeer 2
                            option Employeer 3
                            option Employeer 4
                            option Employeer 5
                      .col-sm-6
                        label Title
                        .inp-group
                          select.select(name="klasifikasi_klien" required)
                            option(selected) Select title
                            option Backend Developer
                            option Frontend Designer
                            option QA/QC
                            option PM
                    .row
                      .col-sm-6
                        label Amount
                        .inp-group
                          .inp-group.curren
                            .addon Rp
                            input.form-control.currency(type="text" name="ope_tidak_ditagih" required)
                      .col-sm-6
                        label Value incentive
                        .inp-group
                          input.form-control(type="text" name="nama_klien" required)
                        
                      
